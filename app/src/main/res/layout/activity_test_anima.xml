<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.fragmentbacktask.activity.TestAnimaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/gonggao" />

        <ImageView
            android:id="@+id/iv_notice_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:src="@mipmap/gonggaozuo" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_show_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="展示海报" />

    <RelativeLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <com.example.user.fragmentbacktask.view.SoufunGridView
            android:id="@+id/gv_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:numColumns="3"
            android:overScrollMode="never"
            android:scrollbars="none" />
    </RelativeLayout>

        <Button
            android:id="@+id/btn_toast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="提示" />


</LinearLayout>
