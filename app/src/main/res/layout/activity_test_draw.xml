<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_anima"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@android:color/holo_green_light"
        android:gravity="center"
        android:text="测试动画" />

    <com.example.user.fragmentbacktask.view.customview.JellyTextView
        android:id="@+id/textview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@+id/tv_anima"
        android:background="@android:color/holo_blue_light"
        android:gravity="center"
        android:text="scroller测试"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/ll_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview"
        android:orientation="horizontal">


        <com.example.user.fragmentbacktask.view.CustomVoiceView
            android:id="@+id/vv_num"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/textview"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            zhy:bg="@mipmap/ic_launcher"
            zhy:circleWidth="3dp"
            zhy:dotCount="12"
            zhy:firstColor="#00ff00"
            zhy:secondColor="#ff0000"
            zhy:splitSize="11" />

        <com.example.user.fragmentbacktask.view.customview.RemoteControlMenu
            android:id="@+id/remote_view"
            android:layout_width="match_parent"
            android:layout_height="130dp" />
    </LinearLayout>

    <com.example.user.fragmentbacktask.view.customview.CustomCanvasView
        android:id="@+id/tv_draw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ll_middle"
        android:background="@android:color/holo_blue_light"
        android:gravity="center"
        android:textSize="18sp" />

</RelativeLayout>
