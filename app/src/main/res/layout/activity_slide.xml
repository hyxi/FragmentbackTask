<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.fragmentbacktask.activity.viewactivity.SlideActivity">

    <com.example.user.fragmentbacktask.view.customview.SlideLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_first"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/light_purple"
            android:gravity="center"
            android:text="header"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/gray_999"
            android:gravity="center"

            android:text="center"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/light_blue"
            android:gravity="center"
            android:text="bottom"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/red_new"
            android:gravity="center"
            android:text="bottom"
            android:textSize="20dp" />
    </com.example.user.fragmentbacktask.view.customview.SlideLinearLayout>
</RelativeLayout>