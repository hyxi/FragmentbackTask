<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ChatInputBoardActivity">

    <ListView
        android:id="@+id/lv_test"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/rl_bottom"
        android:layout_weight="1"
        android:descendantFocusability="afterDescendants"
        android:scrollbarStyle="outsideOverlay"
        android:transcriptMode="normal"
        />

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ll_h_bottom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/dep_gray"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/chat_list_voice_icon_n"/>

            <EditText
                android:id="@+id/et_keywored"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="34dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/edit_bg2"
                android:maxLines="4"
                android:paddingLeft="3dp"/>

            <ImageView
                android:id="@+id/iv_emotion"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginRight="10dp"
                android:background="#00ffffff"
                android:src="@mipmap/chat_emoji_n"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:src="@mipmap/chat_bottom_add_n"/>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_b_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FAFAFA"/>

</LinearLayout>
