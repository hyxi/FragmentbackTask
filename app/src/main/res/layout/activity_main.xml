<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llNavigationBar"
        android:layout_centerVertical="true"
        android:orientation="vertical" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@+id/llNavigationBar"
        android:background="@color/divider" />

    <RadioGroup
        android:id="@+id/llNavigationBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rbMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:button="@null"
            android:layout_weight="1"
            android:clickable="false"
            android:checked="true"
            android:drawableTop="@drawable/tab_evaluation_selector"
            android:focusable="false"
            android:text="回价"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@drawable/navigation_tab_text_color"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"/>
        <RadioButton
            android:id="@+id/rbSurvey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:button="@null"
            android:layout_weight="1"
            android:clickable="false"
            android:drawableTop="@drawable/tab_survey_selector"
            android:focusable="false"
            android:text="查勘"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@drawable/navigation_tab_text_color"
            android:textSize="15sp" />
        <RadioButton
            android:id="@+id/rbMy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:button="@null"
            android:layout_gravity="center"
            android:gravity="center"
            android:clickable="false"
            android:drawableTop="@drawable/tab_my_selector"
            android:focusable="false"
            android:layout_weight="1"
            android:text="我的"
            android:textColor="@drawable/navigation_tab_text_color"
            android:textSize="15sp" />

    </RadioGroup>

</RelativeLayout>
